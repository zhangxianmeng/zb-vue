@import '~common/stylus/variable'
@import '~common/stylus/mixin'
$offset = 10px

.main-index-wrapper
  margin-top -30px !important
  position relative
  z-index 2
  clearfix()
  //奖池
  .jackpot-wrapper
    width: 1400px;
    height: 250px;
    margin-left: -10%;
    margin-top: -80px;
    display flex
    align-items center
    padding 0 20px
    background url(./img/jackpot.png) no-repeat center
    background-size contain
    img
      margin-right 100px
  //热门游戏
  .recommend-game
    .title
      margin-bottom 10px
      display flex
      justify-content space-between
      align-items center
    .more
      font-size 16px
      i
        margin-right 2px
        color $color-primary

