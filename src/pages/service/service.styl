@import '~common/stylus/mixin'
@import '~common/stylus/variable'
.service
  height 1613px
  background url('./img/s-bg.jpg') no-repeat center top
  clearfix()
  .s-q-service
    margin-top 450px

  .item-list
    width 1200px
    height 440px
    background url('./img/s-quetion.jpg') no-repeat
    clearfix()
    .qs
      float left
      width 370px
      height 180px
      margin-left 210px
      margin-top 50px
      display flex
      align-items center
      line-height 24px
      &:nth-of-type(3), &:nth-of-type(4)
        margin-top 0
      & > div
        flex 1
        padding-left 15px

      a
        color $color-light
        display block
        transition all .3s ease-in
        &:hover
          opacity .8

  .others
    padding 20px
    margin-top 150px
    background $color-light
    h3
      margin-bottom 10px
      font-size 16px
      font-weight 600

  .always-q
    h3
      position relative
      left 40px
      top 40px
      color $color-light
      font-weight 600
      font-size 16px

.move-cloud
  display flex
  justify-content space-between
  img
    position relative
    animation: lefts 3s infinite
    &:last-child
      transform rotateY(180deg)
      animation: rights 3s infinite

@-webkit-keyframes lefts {
  0% {
    left: -30px
  }
  50% {
    left: -130px
  }
  100% {
    left: -30px
  }
}

@-webkit-keyframes rights {
  0% {
    right: -100px
  }
  50% {
    right: 0px
  }
  100% {
    right: -100px
  }
}