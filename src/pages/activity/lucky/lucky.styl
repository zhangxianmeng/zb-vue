@import '~common/stylus/mixin'
@media screen and (min-width: 768px)
  .lucky
    .main
      clearfix()
      height 2300px
      color #7f2d00
      background url(./img/j-bg.jpg) no-repeat center top
    .lucky-lottery-wrapper
      margin-top 300px
      margin-left 480px
      .notice
        width 720px
        color #fff
        background rgba(255, 255, 255, .3)
        font-size 20px
        text-align center
        line-height 50px
        border-radius 25px
        span
          color yellow

      .r-lot-b
        position relative
        width 718px
        height 738px
        .begin
          position: absolute;
          top: 204px;
          left: 249px;
          cursor: pointer;
          z-index: 99;
        .r-lot
          position: absolute;
          background: url(./img/r-e-bg.png) no-repeat center;
          width: 718px;
          height: 738px;
          z-index: 99;
          left 0
          top 0

    .activity-content
      background #facf88
      padding 30px 100px
      position relative
      text-align center
      .timer
        position absolute
        top -240px
        left 0
      .text
        font-size 18px
        line-height 32px
        margin 30px auto
        span
          color red
          font-weight 600
      .rankings-caonima
        clearfix()
      .rankings
        float left
        width 490px
        background #fff
        .tit
          display flex
          span
            flex 1
            line-height 60px
            font-size 20px
            font-weight 600
            background #f39900
            cursor pointer
            &.active
              background transparent
        table
          width 100%
          tr
            border-bottom 1px solid #f39900
            line-height 40px

            th, td
              font-size 18px
            th
              font-weight 600
            td
              color red
          tbody tr:last-child
            border 0

        .waiting
          text-align center
          line-height 450px
          color red
          font-size 20px
      .caonima
        width 230px
        height 510px
        float left
        background #f39900
        margin-left 20px
        padding 40px 0
        font-size 18px
        img
          margin-bottom 20px
        p
          line-height 32px
          span
            color red
            font-weight 600
        .btn
          display: inline-block;
          width: 120px;
          line-height: 40px;
          background: #fef201;
          font-weight: bold;
          margin-top: 35px;
          cursor: pointer;

    .activity-rule
      background #facf88
      padding 30px 100px
      margin-top 20px
      .tit
        text-align center

      p
        margin-top 10px
        line-height 36px
        font-size 16px

  .index-alert-mask
    position fixed
    z-index 99
    top 0
    left 0
    right 0
    bottom 0
    background rgba(0, 0, 0, .7)
    .img
      background url(./img/alert.png) no-repeat center
      background-size: contain;
      position: absolute;
      padding: 300px 60px 0;
      top: 10%;
      left: 50%;
      margin-left: -400px;
      width: 800px;
      height: 460px;
      color #fff
      text-align center
      font-size 18px
      .code-wrapper
        width 406px
        margin 15px auto
        display flex
        p
          height 50px
          line-height 50px
          width 350px
          background #2f3443
          text-align left
          text-indent 1em
        span
          background #f39700
          line-height 50px
          padding 0 10px
          cursor pointer
    .close-btn
      position absolute
      right 100px
      top 100px
      font-size 40px
      cursor pointer


@media screen and (max-width: 767px)
  .lucky
    background #facf88
    .wrapper
      padding 0
    .lucky-lottery-wrapper
      clearfix()
      .notice
        color #333
        background rgba(255, 255, 255, .3)
        font-size 16px
        text-align center
        line-height 30px
        padding 15px
        border-radius 25px
        margin 10px 0
        span
          color red

      .r-lot-b
        position relative
        width 320px
        margin 0 auto
        .r-warp
          width 100%
        .r-lot
          position absolute
          left 10px
          top 15px
          background url(./img/r-e-bg.png) no-repeat center
          background-size cover
          width 300px
          height 300px
        .begin
          position absolute
          width 100px
          left 50%
          top 50%
          margin -63px 0 0 -50px
    .activity-content
      margin-top 15px
      color: #7f2d00
      text-align center
      .timer
        display block
        margin 0 auto
      .tit
        img
          width 80%
      .text
        margin 15px 0
        line-height 28px
        font-size 16px
        span
          color red
          font-weight 600
      .rankings
        background #fff
        .tit
          display flex
          span
            flex 1
            line-height 60px
            font-size 20px
            font-weight 600
            background #f39900
            cursor pointer
            &.active
              background transparent
        table
          width 100%
          tr
            border-bottom 1px solid #f39900
            line-height 40px

            th, td
              font-size 18px
            th
              font-weight 600
            td
              color red
          tbody tr:last-child
            border 0

      .caonima
        width 49%
        background #f39900
        float left
        height 320px
        margin-top 10px
        margin-bottom 10px
        line-height 24px
        &:last-child
          margin-left 2%
        img
          max-width 100%
          margin-bottom 10px
        .btn
          display: inline-block;
          line-height: 30px;
          background: #fef201;
          font-weight: bold;
          cursor: pointer;
          width 100px
          margin-top 10px
        p
          span
            color red
            font-weight 600

    .activity-rule
      margin 15px 0
      .tit
        text-align center
        img
          width 80%
      p
        margin-top 10px
        line-height 28px
        font-size 16px
        color #7f2d00

  .index-alert-mask
    position fixed
    z-index 99
    top 0
    left 0
    right 0
    bottom 0
    background rgba(0, 0, 0, .7)
    color #fff
    .img
      width 320px
      height 320px
      background url(./img/alert.png) no-repeat center
      background-size cover
      margin 0 auto
      padding-top 220px
      font-size 16px
      line-height 28px
      text-align center
      .code-wrapper
        margin 15px auto
        display flex
        p
          height 50px
          line-height 50px
          width 80%
          background #2f3443
          text-align left
          text-indent 1em
        span
          background #f39700
          line-height 50px
          cursor pointer
          flex 0 0 20%
          width 20%
          text-align center
    .close-btn
      position absolute
      right 10px
      top 10px
      font-size 30px
      cursor pointer

