@import '~common/stylus/variable'
.mask
  position: fixed
  z-index 999
  height: 100%
  width: 100%
  top: 0
  left: 0
  bottom: 0
  right: 0
  background: rgba(0, 0, 0, .7)

.menu-wrapper
  position fixed
  z-index 999
  left: 0
  top: 0
  width: 65%
  height: 100%
  background: $color-primary-mobile
  color $color-light
  .icon-close
    position absolute
    top 10px
    right 10px

    font-size 24px
  .header
    padding 30px 0
    text-align center
    line-height 24px
    img
      width 80px
   .main
     line-height 38px
     li
       background rgba(0,0,0,.2)
       padding-left 15px
       border-bottom 1px solid #2b374e
       margin-bottom 10px
       i
         margin-right 5px
         vertical-align middle
         font-size 20px