.obt-wrap
  position: fixed
  left: 0
  right: 0
  top: 0
  bottom: 0
  background: rgba(0, 0, 0, .5)
  .obt
    position: absolute 
    padding: 100px 60px 
    top: 10% 
    left: 50% 
    margin-left: -350px 
    width: 700px 
    height: 450px
    text-align: center 
    margin-top: 50px 
    p
      text-align: center
      color: #ffffff
      margin-top: 50px
    .cls
      position: absolute;
      right: 0;
      top: 16px;
      width: 110px;
      height: 100px;
      cursor pointer
#tg-link
  background: #2f3443
  border: none
  padding: 0 5px
  color: #fff
  line-height: 52px
  height 52px
  font-size: 20px
  width: 350px

.copy
  margin: 30px 0 60px
  span
    display: inline-block
    height: 52px
    line-height: 52px
    font-size: 20px
    background: #f39700
    padding: 0 10px
    cursor: pointer
    margin-left: -6px
    color #fff

@media screen and (max-width: 767px)
  #tg-link
    height 32px
    line-height 32px
    width 200px
  .copy
    margin 0
    span
      height 32px
      line-height 32px
      color #fff
  .obt-wrap .obt
    width 320px
    padding 0
    margin-left -160px
    height 300px
    p
      margin-top: 110px
      font-size 14px
    a#links>img
      width 140px
    .cls
      height 80px
