@import '~common/stylus/mixin'
@import '~common/stylus/variable'
.deposit
  padding-top 50px
  background #eee
  .banner
    height 90px
    background url(./img/deposit-bg2.jpg) no-repeat
    background-size cover
    color $color-light
    display flex
    justify-content center
    align-items center
    text-align center
    font-size 16px
    .money
      margin-top 10px
      span
        font-size 18px
        margin-right 5px
  .deposit-list
    .item
      margin-bottom 5px
    .tit
      display flex
      justify-content space-between
      align-items center
      line-height 40px
      background $color-light
      m-wrapper()
      border-bottom 1px solid $color-border-gray
      .icon-badge
        display inline-block
        width 25px
        margin-right 5px
        font-size 20px
        vertical-align middle
        color $color-blue-mobile
      .icon-arrow
        transition all .3s ease-in
      .zeng
        background $color-danger
        color $color-light
        padding 4px 8px
        border-radius 4px


