@import '~common/stylus/mixin'
@import '~common/stylus/variable'
.goods-list-wrapper
  background $color-light
  m-wrapper()
  .filter
    position relative
    .filter-tit
      padding 5px 0
      display flex
      justify-content space-between
      line-height 30px
      border-bottom 1px solid  #eee

      .tab
        display flex
        flex 1
        border-right 1px solid #eee
        padding-right 10px
        span
          background #eee
          flex 1
          border-radius 5px
          margin-right 15px
          text-align center
          &:last-child
            margin-right 0
          &.active
            background $color-danger
            color $color-light

      .select
        flex 0 0 80px
        width 80px
        text-align center
    .sub
      position absolute
      width 100%
      left 0
      top 42px
      padding 10px 0
      background rgba(255,255,255,.85)
      .tit
        margin-bottom 8px
      .category-btn
        span
          float left
          background #eee
          border-radius 5px
          margin-right 8px
          margin-bottom 8px
          line-height 30px
          padding 0 10px
          text-align center
          &:last-child
            margin-right 0
          &.active
            background $color-danger
            color $color-light


  .goods-list
    margin-top 10px
    .item
      display flex
      align-items center
      margin-bottom 10px
      border-bottom 1px solid #eee
      padding-bottom 10px
      .pic
        flex 0 0 130px
        width 130px
        height 110px
        display flex
        justify-content center
        align-items center
        border 1px solid #eee
        margin-right 10px
        img
          max-width 90px
      .describe
        flex 1
        line-height 21px
      .name
        font-size 16px
        margin-bottom 10px
        no-wrap()
      .btn
        margin-top 5px
        button
          display block
          width 100%