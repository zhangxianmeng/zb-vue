@import '~common/stylus/variable'
@import '~common/stylus/mixin'
.integral-detail
  padding-bottom 30px
  .header
    margin 20px 0
  .product-wrapper
    clearfix()
    padding 30px 20px
    background #fff
    .big-img
      float left
      width 500px
      height 350px
      display flex
      justify-content center
      align-items center
      border 1px solid #ddd
    .detail-info
      float left
      margin-left 30px
      line-height 26px
      p
        margin 10px 0
      h3
        font-size 20px
        font-weight 600
        span
          font-size 18px
          margin-left 5px
      .old
        text-decoration line-through
        margin-left 10px
      .need-point
        font-size 18px
      .promo-point
        width 620px
        height 86px
        margin 20px 0
        padding 3px 20px
        background url('./img/detail-bg.jpg')

      .promo
        display flex
        &>span
          opacity .8
          margin-right 10px
        .promo-list
          position relative
          &:hover div
            display block
          div
            display none
            position absolute
            top 35px
            right 0
            border 1px solid $color-danger
            background #fff
            width 230px
            padding 10px 20px
            line-height 21px
            font-size 15px
            &:after,&:before
              content: ''
              display: block
              position: absolute
              width: 0
              top: -20px
              right: 30px
              border: 10px solid transparent
              border-bottom-color: $color-danger
            &:after
              border-bottom-color: #fff
              top: -19px
            span
              display inline-block
              width 50%
              &:first-child
                text-align right
                padding-right 10px

      .type
        display flex
        .property-list
          width 530px
        a
          border 1px solid #ddd
          font-size 15px
          padding 2px 12px
          margin-right 8px
          margin-bottom 8px
          float left
          &.active
            border: 1px solid $color-danger
            color $color-danger

      .same-width
        display inline-block
        width 80px
      .btn-wrapper
        margin-top 10px
      .level
        margin-top 20px
        img
          width 50px
        .level-text
          margin 0 10px
        .my-points
          border 1px solid $color-danger
          padding 6px 10px
          border-radius 4px
          color $color-danger
          span
            font-size 16px
