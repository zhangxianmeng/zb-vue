@import '~common/stylus/variable'
@import '~common/stylus/mixin'
.common-deposit
  .tab-title
    border-bottom 1px solid $color-primary
    a
      padding 0 14px
      border 1px solid rgba(64,66,104,.3)
      border-bottom-color $color-primary
      margin-right 8px
      position relative
      top 1px
      &:last-child
        margin-right 0
      &.active
        border 1px solid $color-primary
        background $color-primary
        color $color-light
  .pay-content
    padding 40px
    position relative
    .confirm-deposit
      position absolute
      top 0
      left 0
      height 100%
      width 100%
      background $color-light
      .confirm-title
        background $color-primary
        font-size 18px
        line-height 50px
        color $color-light
        padding-left 20px
        margin-bottom 50px
      .confirm-foot
        border-top 2px dashed #cccccc
        margin 50px 30px
        p
          margin 40px 0
          line-height 30px
      .confirm-quota-page
        position absolute
        z-index 100
        width 100%
        height 100%
        background $color-light
        padding 50px 100px

        .confirm-quota-tit
          font-size 30px
          text-align center
          line-height 50px
          p
            font-weight 600
        .confirm-checkbox
          margin-top 30px
          font-size 18px
          line-height 32px
          input
            width 20px
            height 20px
            vertical-align middle
        .center
          margin-top 20px
    .jadz-code-wrapper
      position absolute
      top 0
      right 0

.input-group
  .limitWidth
    width 500px

