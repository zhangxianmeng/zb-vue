.slide-fade-enter-active
  transition: all .3s ease

.slide-fade-leave-active
  transition: all .3s cubic-bezier(1.0, 0.5, 0.8, 1.0)

.slide-fade-enter, .slide-fade-leave-to
  transform: translateY(-10px)
  opacity: 0

//过渡属性
.opacity-enter-active, .opacity-leave-active
  transition all .3s ease-in

.opacity-enter, .opacity-leave-to
  opacity 0
  transform translate3d(5px, 0, 0)

.slider-left-enter-active, .slider-left-leave-active,
.slider-right-enter-active, .slider-right-leave-active
  transition all .3s ease-in

.slider-left-enter, .slider-left-leave-to
  opacity 0
  transform translate3d(-100%, 0, 0)

.slider-right-enter, .slider-right-leave-to
  opacity 0
  transform translate3d(100%, 0, 0)

//转场动画  
.child-view
  position: absolute
  top: 0
  left: 0
  width: 100%
  min-height: 100%
  -moz-box-sizing: border-box
  box-sizing: border-box
  transition: all .6s cubic-bezier(.55, 0, .1, 1)
  overflow auto

.page-slide-left-enter, .page-slide-right-leave-active
  opacity: 0
  -webkit-transform: translate(-80px, 0)
  transform: translate(-80px, 0)

.page-slide-left-leave-active, .page-slide-right-enter
  opacity: 0
  transform: translate(100%, 0)

//懒加载动画
@keyframes rubberBand {
  from {
    -webkit-transform: scale3d(1, 1, 1);
    transform: scale3d(1, 1, 1);
  }

  30% {
    -webkit-transform: scale3d(1.25, 0.75, 1);
    transform: scale3d(1.25, 0.75, 1);
  }

  40% {
    -webkit-transform: scale3d(0.75, 1.25, 1);
    transform: scale3d(0.75, 1.25, 1);
  }

  50% {
    -webkit-transform: scale3d(1.15, 0.85, 1);
    transform: scale3d(1.15, 0.85, 1);
  }

  65% {
    -webkit-transform: scale3d(0.95, 1.05, 1);
    transform: scale3d(0.95, 1.05, 1);
  }

  75% {
    -webkit-transform: scale3d(1.05, 0.95, 1);
    transform: scale3d(1.05, 0.95, 1);
  }

  to {
    -webkit-transform: scale3d(1, 1, 1);
    transform: scale3d(1, 1, 1);
  }
}

[lazy=loaded]
  animation: rubberBand .5s ease-in 1
  &.no-ani
    animation none




