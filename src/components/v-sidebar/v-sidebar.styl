@import '~common/stylus/variable'
@import '~common/stylus/mixin'

.sidebar
  font-size 14px
  position fixed
  right 0
  top 50%
  z-index 99999
  color $color-light
  transform translate3d(0,-50%,0)
  transition all .3s ease-in
  .item-list
    .item
      width 70px
      height 70px
      text-align center
      border-bottom 1px solid #fff
      position relative
      &:last-child
        border 0
      &:hover a i
        background #fff100
      &:hover span
        color #fff100
      a
        display block
        height 100%
        opacity .8
        background #326fd1
        clearfix()
      i
        display block
        width 40px
        height 40px
        line-height 40px
        border-radius 50%
        background $color-light
        color #326fd1
        margin 5px auto
        font-size 24px
        transition all .3s ease-in
      span
        color $color-light
      .sub-box
        position absolute
        right 70px
        top 0
        background $color-light
        padding 15px
        box-shadow 0 0 5px #bbb
        h3
          color #326fd1
          font-weight 600
          font-size 16px
          line-height 26px
        input
          margin 10px 0

        .wxEwm
          width 180px
          margin-bottom 10px
        .platform
          display flex
          justify-content space-between
          i
            margin 0 auto
      .app-download
        h3,i
          color #ffcd05
      .sub-box-service
        height 70px
        display flex
        align-items center
